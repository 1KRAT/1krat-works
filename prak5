using System;

namespace prak5
{
    class Program
    {
        static void Main(string[] args)
        {
            string s = String.Empty;
            Console.Write("Последовательность квадратов натуральных чисел: ");
            for (int i = 1; i <= 10; i++)
            {
                s += Convert.ToString(Math.Pow(i, 2));
            }
            Console.WriteLine(s);
            Console.Write("Введите номер цифры, которую нужно вывести: ");
            int k = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Цифра последовательности под номером "+ k + " равна "+ s[k-1]);

        }
    }
}
