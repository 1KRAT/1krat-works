using System;

namespace prak2
{
    class Program
    {
        static void Main(string[] args)
        {
            int x = Convert.ToInt32(Console.ReadLine()); 
            int n = Convert.ToInt32(Console.ReadLine());
            int d = x;
            double summ = 1;
            for(int i = 0; i < n; i++)
            {
                int s = 1;
              summ +=  (Math.Pow(x,n) /(s*=i) );
            }
            Console.WriteLine(summ);
        }
    }
}
